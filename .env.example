# Corporate Intelligence Platform Environment Variables
# =======================================================
# SECURITY WARNING: Never commit actual credentials to version control!
# Copy this file to .env and update with your actual secure values

# Environment Configuration
# -------------------------
ENVIRONMENT=development
DEBUG=false

# Security - CRITICAL: Change these before deployment!
# ----------------------------------------------------
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_KEY_MINIMUM_32_CHARS

# Database Credentials
# --------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=intel_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
POSTGRES_DB=corporate_intel

# TimescaleDB Configuration
TIMESCALE_COMPRESSION_AFTER_DAYS=30
TIMESCALE_RETENTION_YEARS=2

# Redis Cache
# -----------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_SECURE_REDIS_PASSWORD
REDIS_DB=0
REDIS_CACHE_TTL=3600

# MinIO Object Storage
# --------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=REPLACE_WITH_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=REPLACE_WITH_MINIO_SECRET_KEY
MINIO_SECURE=false
MINIO_BUCKET_DOCUMENTS=corporate-documents
MINIO_BUCKET_REPORTS=analysis-reports

# Workflow Orchestration
# ----------------------
PREFECT_API_URL=http://localhost:4200/api
PREFECT_WORKSPACE=corporate-intel

# Distributed Computing
# ---------------------
RAY_HEAD_ADDRESS=ray://localhost:10001
# RAY_NUM_CPUS=4
# RAY_NUM_GPUS=0

# External API Keys - Optional but recommended
# --------------------------------------------
# Alpha Vantage: Free tier available at https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# NewsAPI: Free tier at https://newsapi.org/register
NEWSAPI_KEY=

# Crunchbase: Paid API at https://data.crunchbase.com/docs
CRUNCHBASE_API_KEY=

# GitHub: Personal access token from https://github.com/settings/tokens
GITHUB_TOKEN=

# SEC EDGAR API
# -------------
# Required: Must include valid email per SEC guidelines
SEC_USER_AGENT=Corporate Intel Platform/1.0 (your-email@example.com)
SEC_RATE_LIMIT=10

# Observability
# -------------
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=corporate-intel
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Monitoring Services
# -------------------
# Grafana
GRAFANA_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Superset
SUPERSET_SECRET_KEY=REPLACE_WITH_SECURE_KEY

# Application Features
# --------------------
# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Data Quality
DATA_QUALITY_ENABLED=true
ANOMALY_DETECTION_ENABLED=true

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Vector Database
VECTOR_DIMENSION=1536
VECTOR_INDEX_TYPE=ivfflat
VECTOR_LISTS=100

# Cache
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# Logging
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:3000","http://localhost:8088"]

# Yahoo Finance
YAHOO_FINANCE_ENABLED=true

# EdTech Company Watchlist (comma-separated ticker symbols)
EDTECH_COMPANIES_WATCHLIST=["CHGG","COUR","DUOL","TWOU","ARCE","LAUR","INST","POWL"]